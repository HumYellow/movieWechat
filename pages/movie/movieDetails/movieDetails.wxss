/* pages/movie/movieDetails/movieDetails.wxss */
page{padding-bottom:40px;background:#fff;}
.movieHeadBox{position:relative;padding-bottom:70px;}
.movieHead-pic{width:100%;height:180px;overflow:hidden;}
.movieDescBox{display:flex;padding:0 30rpx;align-items: flex-end;position:absolute;left:0;bottom:0px;width:100%;box-sizing: border-box;}
.moviePic{flex:0 0 160rpx;height:215rpx;border-radius:3px;}
.movieDesc{font-size:14px;line-height:22px;padding-left:10px;flex:1;}
.movieDesc-title{display:flex;font-size:32rpx;}
.movieDesc-name{flex:1;}
.movieDesc-score{color:#6ab778;margin-left:10px;}
.movieDesc-score text{font-size:12px;}
.movieDesc-type ,.movieDesc-time{color:#666;font-size:12px;line-height:22px;}

.movieUserBox{display:flex; justify-content: center;padding:50rpx 30rpx 0;}
.movieUserBox-item:nth-child(1){margin-right:4%;}
.movieUserBox-item{width:48%;border:1px solid #f2f2f2;background:#f2f2f2;font-size:26rpx;padding:20rpx;text-align:center; color:#bcbcbc;border-radius:40rpx;}
.movieUserBox-item.select{color:#80c78f;border-color:#80c78f;background:#fff;}
.movieUserBox-item-icon{width:26rpx;height:26rpx;margin-right:10rpx;}

.movieSurveyBox{margin:0 30rpx;padding:40rpx 0 0;}
.movieDetail-title{font-size:32rpx;color:#333;display:flex;}
.movieSurvey-desc{color:#999;font-size:24rpx;margin-top:20rpx;line-height:40rpx;}
.movieDetail-titleBox{width:70%;}
.videoAndPic-toPic{width:30%;text-align:right;font-size:12px;color:#999}

.movieStaffListBox{padding:20px 0;margin:0 20px;border-bottom:1px solid #e4e4e4}
.movieStaffListBox-item{margin-top:20rpx;}
.movieStaffList{width:auto;overflow:hidden;white-space: nowrap;}
.movieStaffList-item{width:20%;text-align:center;font-size:14px;display:inline-block;margin:0 5px;}
.movieStaffList-item:nth-child(1){margin-left:0;}
.movieStaffList-item:last-child{margin-right:0;}
.movieScrollPic{width:100%;height:auto;}
.movieName{color:#333;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.movieTitle{color:#999;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}

.videoAndPicBox{padding:20px 0 40px;margin:0 20px;}
.videoAndPicList{width:auto;overflow:hidden;white-space: nowrap;margin-top:10px;}
.videoAndPic-item{width:40%;display:inline-block;margin:0 3px;position:relative;}
.videoAndPic-item:nth-child(1){margin-left:0;}
.videoAndPic-item:last-child{margin-right:0;}
.videoAndPic{height:100px;width:auto;}
.videoPlayIcon{position:absolute;right:10px;bottom:10px;width:25px;height:25px;}

.toBuy{width:100%;position:fixed;left:0;bottom:0;background:#fff; color:#fff;text-align:center;border-top:1px solid #e0e0e0;padding:20rpx 0;}
.toBuyBtn{border-radius:50rpx;width:300rpx;padding:15rpx 0;margin:0 auto;font-size:32rpx;}