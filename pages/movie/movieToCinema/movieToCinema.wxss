/* pages/cinema/cinemaList/cinemaList.wxss */
.cinemaListSelect{display:flex;justify-content: center; flex-grow: 2;margin:20rpx 0;}
.cinemaListSelect-item{text-align:center;width:50%;color:#6e6e6e;border-left:2rpx solid #e2e2e2;}
.cinemaListSelect-item .picker{font-size:28rpx;}
.cinemaListSelect-item:nth-child(1){border:none;}
.cinemaListSelect-item-tip{width: 0;display:inline-block;height: 0;margin-left:4rpx;
border-left: 8rpx solid transparent; border-right: 8rpx solid transparent;border-top: 12rpx solid #c8c8c8;}

.cinemaListBox{padding:2rpx 20rpx;background:#f8f8f8}
.cinemaListBox-item{display: flex;justify-content: center;box-shadow: 2px 2px 10px #e4e4e4;padding:20rpx;background: #fff;margin:20rpx 0;border-radius:3px;}
.cinemaListBox-pic{width:15%;max-height:13vw;border:1px solid #e6e6e6;border-radius:3px;margin-top:6rpx;}
.cinemaListBox-desc{width:85%;padding-left:20rpx;}
.cinemaListBox-desc-title{display: flex;align-items: center;}
.cinemaListBox-desc-cinemaName{width:60%;font-size:16px;font-weight:400;}
.cinemaListBox-desc-price{width:40%;color:#ff4d64;text-align:right;font-size:26rpx;}
.cinemaListBox-desc-address{color:#999; font-size:12px;margin:5px 0;}
.cinemaListBox-desc-typeList{margin:0;overflow:hidden;display:flex;}
.cinemaListBox-desc-type{margin:0 14rpx 0 0;border-radius:3px;font-size:10px;padding:4rpx 10rpx;color:#63a4fd;border:2rpx solid #63a4fd;background:#fff;}
.cinemaListBox-desc-type.selectType{color:#fff;background:#63a4fd}