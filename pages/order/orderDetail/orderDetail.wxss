/* pages/order/orderDetail/orderDetail.wxss */
.orderDetail{padding:20rpx;min-height:100vh;}
.orderDetail-box{overflow:hidden;border-radius:5px;}
.orderDetail-addr{font-size:24rpx;color:#999999;background:#fff url('data:image/png;base64,') no-repeat;padding:30rpx 40rpx;border-bottom:1px solid #f8f8f8;background-position:94% center;background-size:auto 25%;}

.orderDetail-movie{background:#fff;padding:40rpx;display:flex;align-items: center;}
.orderDetail-movie-desc{box-sizing: border-box;padding-right:20rpx;flex-grow: 1;line-height:40rpx;}
.orderDetail-movie-pic{flex:0 0 135rpx;height:190rpx;}
.orderDetail-movie-title{font-size:32rpx;color:#333;line-height:68rpx;}
.orderDetail-movie-time{color:#333;font-size:24rpx;line-height:40rpx;}
.orderDetail-movie-seat{color:#999;font-size:24rpx;line-height:40rpx;}
orderDetail-movie-seat-item{display:inline-block}
.orderDetailLine{width:100%;height:auto;margin:0;display:block;}

.QRcodeBox{display:flex;background:#fff;padding:50rpx 0;justify-content: center;flex-flow: column;align-items: center;position:relative;}
.opAll{opacity: 1 !important;}
.opHalf{opacity: 0.5 !important;}
.QRcodeBox .canvas{width:150px;height:150px;}
.couponCode{color:#6ab778;font-size:24rpx;text-align:center;margin-top:10rpx;}
.QRcodeBox .stateImg{position:absolute;width:98rpx;height:74rpx;right:50rpx;top:-20rpx;}
.QRcodeBox .stateImg image{width:100%;height:100%;}
.noBill{display:flex; align-items: center; flex-flow: column;}
.noBill image{width:286rpx;height:368rpx;}
.noBillText{color:#6ab778;font-size:28rpx;margin-top:20rpx;}

.orderDetail-desc{background:#fff;padding:40rpx 40rpx 60rpx;}
.orderDetail-desc-title{display:flex;width:100%;align-items: center;}
.orderDetail-desc-titleBox1{font-size:36rpx;width:70%;color:#333;line-height:80rpx;}
.orderDetail-desc-titleBox2{font-size:36rpx;width:30%;text-align:right;color:#6ab778}
.orderDetail-desc-text{color:#999;font-size:24rpx; line-height:50rpx;}