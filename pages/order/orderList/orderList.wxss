/* pages/order/orderList/orderList.wxss */
page{background:#f8f8f8}
.orderList{padding:2rpx 20rpx;}

.orderList-item{margin:20rpx 0;border-radius:4px;overflow:hidden;}
.orderList-item-cinemaTitle{font-size:26rpx;height:35px;color:#666; align-items: center;display:flex;padding:10rpx 40rpx 0;background:#fff;}
.orderList-item-cinemaName{width:60%;}
.orderList-item-orderState{color:#6ab778;font-size:22rpx;width:40%;text-align:right;}
.orderListLine{width:100%;height:30rpx;display:block}

.orderList-item-box{display: flex;padding:20rpx 40rpx 30rpx;background:#fff;}
.orderList-item-pic{flex:0 0 135rpx;height:190rpx;border-radius:3px;}
.orderList-item-descBox{display: flex; flex-grow: 1}
.orderList-item-desc{flex:1;padding-left:20rpx;}
.orderList-item-title{line-height:52rpx;font-size:32rpx;color:#333;}
.orderList-item-movieName{display:inline-block;margin-right:20rpx;font-weight:600;}
.orderList-item-num{display: inline-block;}
.orderList-item-time ,.orderList-item-seat{font-size:24rpx;color:#999;line-height:44rpx;}
.orderList-item-seat-item{display:inline-block;margin-right:10rpx;}
.orderList-item-type{flex:0 0 120rpx;text-align:center;display: flex; align-items: center;justify-content: center;font-size:28rpx;padding-left:30rpx;}
.orderList-item-toOrderDetail{background:#fff;color:#6ab778;height:50rpx;width:100%;display:flex;justify-content: flex-end;align-items: center;font-size:28rpx;}
.orderList-item-isUsed{width:98rpx;height:74rpx;}
.lastPage{text-align:center;color:#666;font-size:24rpx;width:100%;padding:30rpx 0;}