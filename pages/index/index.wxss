/**index.wxss**/
.container{width:90%;margin:50px auto;}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.indexMovieMod{padding:0 10px 20px;}
.indexMovieMod .headTitle{font-size:14px;display: flex; justify-content: center;width:100%;align-items: center;padding:10px 0;}
.headTitleLeft{width:70%;color:#333333;font-weight:600;font-size:16px;}
.headTitleRight{width:30%;text-align:right;font-size:12px;color:#999}

.indexMovieList{}
.indexScrollList{width:auto;overflow:hidden;white-space: nowrap;}
.indexScroll_item{width:27%;display: inline-block;padding-left:10px;font-size:14px;
height: auto;}
.indexScroll_item:nth-child(1){padding:0;}
.movieScrollPic{border-radius:2px;width:110px;height:150px;}
.movieName{margin:5px 0;}
.movieBuy{border-radius: 15px;background:#63a4fd;color:#fff;width:45px;height:20px;font-size:12px;text-align:center;line-height:20px;}

.picLink{border-top:5px solid #f2f2f2;border-bottom:5px solid #f2f2f2;height:100px;overflow:hidden;}
.picLink-pic{width:100%;}