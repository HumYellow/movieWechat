/* pages/cinema/cinemaList/cinemaList.wxss */
page{background:#f8f8f8}
.cinemaListSelect{display:flex;justify-content: center; flex-grow: 2;padding:20rpx 0;background:#fff;position:sticky;left:0;top:0;}
.cinemaListSelect-item{text-align:center;width:50%;color:#6e6e6e;border-left:2rpx solid #e2e2e2;font-size:28rpx;}
.cinemaListSelect-item:nth-child(1){border:none;}
.cinemaListSelect-item-tip{width: 0;display:inline-block;height: 0;margin-left:2px;
border-left: 8rpx solid transparent; border-right: 8rpx solid transparent;border-top: 12rpx solid #c8c8c8;}

.cinemaListBox{padding:1px 10px;background:#f8f8f8}
.cinemaListBox-item{box-shadow: 2px 2px 10px #e4e4e4;padding:20rpx;background: #fff;margin:20rpx 0;border-radius:3px;}
.cinemaListDesc{display: flex;justify-content: center;}
.cinemaListBox-pic{flex:0 0 80rpx;overflow:hidden;height:80rpx;border:1px solid #e4e4e4;border-radius:50%;}
.cinemaListBox-pic image{width:100%;height:100%;}
.cinemaListBox-desc{padding-left:20rpx;flex-grow:1;}
.cinemaListBox-desc-title{display: flex;align-items: flex-start;text-align:right;}
.cinemaListBox-desc-cinemaName{font-size:32rpx;font-weight:400;width:100%;text-align:left;}
.distance{font-size:24rpx; color:#999;width:30%;}
.cinemaListBox-desc-price{width:40%;color:#ff4d64;text-align:right;font-size:26rpx;}
.cinemaListBox-desc-address{color:#999; font-size:24rpx;margin:10rpx 0;}
.cinemaListBox-desc-typeList{margin:0;overflow:hidden;}
.cinemaListBox-desc-type{margin:0 14rpx 0 0;border-radius:3px;font-size:20rpx;padding:4rpx 10rpx;display:inline-block;}
.cinemaListBox-desc-type.selectType{color:#fff;background:#2ba245}
.cinemaListImg{display:flex; width:100%;height:160rpx;margin-top:20rpx;}
.cinemaListImg-item{width:32%;height:100%;}
.cinemaListImg-item:nth-child(2){padding:0 2%;}
.cinemaListImg-item image{width:100%;height:100%;border-radius:8rpx;overflow:hidden;}

.lastPage{text-align:center;color:#666;font-size:24rpx;width:100%;padding:30rpx 0;}